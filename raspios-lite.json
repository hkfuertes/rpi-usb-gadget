{
    "variables": {
        "url": "{{env `IMG_URL`}}",
        "md5_url": "{{env `IMG_URL`}}.sha256",
        "image_path": "{{env `FILENAME`}}"
    },
    "builders": [
        {
            "type": "arm",
            "file_urls": [
                "{{user `url`}}"
            ],
            "file_checksum_url": "{{user `md5_url`}}",
            "file_checksum_type": "sha256",
            "file_target_extension": "xz",
            "file_unarchive_cmd": [
                "xz",
                "--decompress",
                "$ARCHIVE_PATH"
            ],
            "image_build_method": "reuse",
            "image_path": "{{user `image_path`}}",
            "image_size": "2G",
			"image_type": "dos",
            "image_partitions": [
                {
                    "name": "boot",
                    "type": "c",
                    "start_sector": "8192",
                    "filesystem": "vfat",
                    "size": "256M",
                    "mountpoint": "/boot"
                },
                {
                    "name": "root",
                    "type": "83",
                    "start_sector": "532480",
                    "filesystem": "ext4",
                    "size": "0",
                    "mountpoint": "/"
                }
            ],
            "image_chroot_env": [
                "PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"
            ],
            "qemu_binary_source_path": "/usr/bin/qemu-arm-static",
            "qemu_binary_destination_path": "/usr/bin/qemu-arm-static"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo apt update",
                "sudo apt install -y dnsmasq"
            ]
        },
        {
            "type": "file",
            "source": "sources//etc/dnsmasq.d/usb0",
            "destination": "/etc/dnsmasq.d/usb0"
        },
        {
            "type": "file",
            "source": "sources//etc/network/interfaces.d/usb0",
            "destination": "/etc/network/interfaces.d/usb0"
        },
        {
            "type": "shell",
            "inline": [
                "echo dtoverlay=dwc2,dr_mode=peripheral >> /boot/config.txt",
                "sed -i 's/$/ modules-load=dwc2,g_ether/' /boot/cmdline.txt",
                "echo denyinterfaces usb0 >> /etc/dhcpcd.conf"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "compress",
            "format": "zip",
            "output": "{{user `image_path`}}.zip",
            "keep_input_artifact": true,
            "compression_level": 9
        }
    ]
}